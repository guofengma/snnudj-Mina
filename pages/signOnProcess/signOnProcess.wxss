.bg-card {
    display: flex;
    flex-direction: column;
    align-self: center;
    box-sizing: border-box;
    width: 670rpx;
    height: 200rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    position: relative;
    top: -160rpx;
}

.bg-img {
    width: 100%;
    z-index: -10;
    height: 340rpx;
    position: relative;
}

.small-title {
    font-size: 24rpx;
    margin-bottom: 8rpx;
}

.end-time {
    font-size: 40rpx;
}

.user-info {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 44rpx;
    margin-bottom: 40rpx;
}

.text_area {
    display: flex;
    flex-direction: column;
}

.profImg {
    height: 120rpx;
    width: 120rpx;
    border-radius: 50%;
    margin-right: 18rpx;
    overflow: hidden;
    object-fit: over;
    float: left;
}

.container {
    position: relative;
    top: -220rpx;
    background: white;
}

.mid-title {
    width: 100%;
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
}

.black-line {
    width: 100%;
    background: #373c46;
    height: 2rpx;
    margin-bottom: 18rpx;
    border-radius: 1rpx;
}

.sign-total {
    width: 100%;
    box-sizing: border-box;
    padding: 0 10rpx;
}

.sign-people {
    display: flex;
    justify-content: space-between;
    margin-bottom: 18rpx;
    font-size: 28rpx;
}

.grey-line {
    width: 100%;
    height: 2rpx;
    background: rgba(153, 155, 161, 0.29);
    margin-bottom: 18rpx;
    border-radius: 1rpx;
}

.btn-area {
    width: 100%;
    height: 160rpx;
    padding: 30rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    position: fixed;
    z-index: 99;
    bottom: 0;
}

.fin-btn {
    height: 100%;
    border-radius: 50rpx;
}
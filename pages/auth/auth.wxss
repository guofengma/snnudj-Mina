.white_card {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 200rpx;
    padding-top: 0;
}

.card-title {
    background: linear-gradient(90deg, #FD607E, #F40B31);
    box-sizing: border-box;
    border-top-right-radius: 12rpx;
    border-top-left-radius: 12rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    color: white;
    height: 80rpx;
    width: 670rpx;
    margin-bottom: 24rpx;
}

form {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

input {
    font-size: 32rpx;
    color: rgb(211, 55, 64);
    display: flex;
    justify-content: center;
    align-items: center;
    width: 300rpx;
}

.input-area {
    padding: 0 16rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 2rpx solid rgb(211, 55, 64);
    border-radius: 12rpx;
    box-sizing: border-box;
    height: 80rpx;
    width: 100%;
    background: #f5f8fd;
    margin-bottom: 24rpx;
    color: rgb(211, 55, 64);
}

button {
    box-sizing: border-box;
    height: 90rpx;
    border-radius: 45rpx;
    width: 100%;
}
/**app.wxss**/

page {
    height: 100%;
    width: 100%;
    background-color: #f5f8fd;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: 0 40rpx;
    box-sizing: border-box;
    background-color: #f5f8fd;
}

.my_black {
    color: #373c46;
}

.my_grey {
    color: #999ba1;
}

.gradient_red {
    background: linear-gradient(rgb(253, 96, 126), rgb(244, 11, 49));
}

.my_red {
    color: rgb(211, 55, 64);
}

.white_card {
    border-radius: 12rpx;
    background: white;
    box-shadow: 0rpx 6rpx 10rpx #eef1fd;
    padding: 24rpx;
    box-sizing: border-box;
    position: relative;
    display: flex;
}

.large_font {
    font-size: 48rpx;
}

.mid_font {
    font-size: 32rpx;
}

.normal_font {
    font-size: 28rpx;
}

.small_font {
    font-size: 22rpx;
}

.xs_font {
    font-size: 20rpx;
}

.my_bold {
    font-weight: bold;
}

.card_hover {
    background: rgb(246, 246, 250);
}